@{
    ViewBag.Title = "CarFleet";
    Layout = "~/Views/Shared/_Layout.cshtml";
    bool isAdd = Convert.ToBoolean(ViewData["blAddRights"]);
    bool isEdit = Convert.ToBoolean(ViewData["blEditRights"]);
    bool isDelete = Convert.ToBoolean(ViewData["blDeleteRights"]);
    bool isExport = Convert.ToBoolean(ViewData["blExportRights"]);
}
@using (Html.BeginForm("CarFleet", "CarFleet", FormMethod.Post, new { @id = "frmCarFleet", @class = "form_validation_ttip well stdform" }))
{
    <div class="panel panel-grey">
        <div class="panel-heading">
            @ViewBag.Title
        </div>
        @Html.Hidden("hfAdd", @isAdd)
        @Html.Hidden("hfEdit", @isEdit)
        @Html.Hidden("hfDelete", @isDelete)
        @Html.Hidden("hfExport", @isExport)

        <div class="panel-body pan">
            <div class="row form-group">
                <div class="col-md-4">
                    <div class="row search-label">
                        <label class="control-label col-md-4">
                            Last Trip Start
                        </label>
                        <div class="col-md-8">
                            <input type="text" id="txtTripStartDateSearch" class="date form-control" tabindex="-2" />
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="row search-label">
                        <label class="control-label col-md-4">
                            Search
                        </label>
                        <div class="col-md-8">
                            <input type="text" id="txtUserSearch" class="alphanumwithspc form-control" tabindex="1" />
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="row search-label">
                    </div>
                </div>
            </div>
            <div class="row form-group">
                <div class="col-md-4">
                    <div class="row search-label">
                        <label class="control-label col-md-4">
                            Last Trip End
                        </label>
                        <div class="col-md-8">
                            <input type="text" id="txtTripEndDateSearch" class="date form-control" tabindex="-1" />
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                </div>
                <div class="col-md-4">
                    <div class="row search-label">
                        <label class="control-label col-md-4">

                        </label>
                        <div class="col-md-8">
                            <input class="btn btn-primary" id="btnSearchCarFleet" name="inputSearch" type="button" value="Search Car Fleet" tabindex="3" title='Search Tracker' />
                        </div>
                    </div>
                </div>
            </div>
            <div class="row form-group">
                <div class="col-md-3">

                </div>
                <div class="col-md-9 text-right">
                    <label class="control-label">
                        &nbsp;
                    </label>
                    @if (isAdd)
                    {
                        @Html.ActionLink("Add New CarFleet", "CarFleet", "CarFleet", null, new { @class = "btn btn-primary" })
                    }
                    @if (isDelete)
                    {
                        <input class="btn btn-danger" id="btnDeleteCarFleet" name="inputDelete" type="button" value="Delete CarFleet" tabindex="3" title='Delete CarFleet' />
                    }

                </div>
            </div>

            <div class="span12 user-contant">
                <div id="dvCarFleet">
                    <table id="tblCarFleet"></table>
                    <div id="dvCarFleetFooter"></div>
                </div>
            </div>
        </div>
    </div>
}
<script src="~/Scripts/Utility/CarFleetView.js"></script>
