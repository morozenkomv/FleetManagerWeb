@model FleetManagerWeb.Models.ClsOrderCategory
@{
    ViewBag.Title = "Order Category";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("OrderCategory", "OrderCategory", FormMethod.Post, new { @id = "frmOrderCategory", @class = "form_validation_ttip well stdform" }))
{
    <div class="panel panel-grey">
        <div class="panel-heading">
            @ViewBag.Title
        </div>
        <div class="panel-body pan">
            <div class="row-fluid">
                @Html.HiddenFor(m => m.hdniFrame)
                @Html.HiddenFor(m => m.lgId)
            </div>
            <div class="row form-group">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">
                            Name
                            <span class="f_req">*</span>
                        </label>
                        @Html.TextBoxFor(m => m.strName, new { @class = "span11 required alphanumwithspc form-control", @maxlength = "20", @tabindex = "2", @next = "blIsActive" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">
                            Active
                            <span class="f_req">*</span>
                        </label>
                        <br />
                        @Html.CheckBoxFor(m => m.blIsActive, new { @tabindex = "2", @next = "btnSubmit", @class = "span11 form-control" })
                    </div>
                </div>
            </div>
            <div class="row form-group">
                <div class="col-md-12">
                    <input class="btn btn-inverse btn-primary" id="btnSubmit" name="inputSubmit" type="submit" value="Save" tabindex="3" title="Save Order Category" />
                    <input class="btn btn-green cancel" id="btnCancel" name="inputCancel" type="button" value="Cancel" tabindex="4" title="Cancel Order Category" />

                </div>
            </div>

        </div>
    </div>
                    }
<script src="~/Scripts/Utility/OrderCategory.js?v=@DateTime.Now.Ticks"></script>
