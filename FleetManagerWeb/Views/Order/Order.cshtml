@model FleetManagerWeb.Models.ClsOrder
@{
    ViewBag.Title = "Order";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("Order", "Order", FormMethod.Post, new { @id = "frmOrder", @class = "form_validation_ttip well stdform" }))
{
    <div class="panel panel-grey">
        <div class="panel-heading">
            @ViewBag.Title
        </div>
        <div class="panel-body pan">
            <div class="row-fluid">
                @Html.HiddenFor(m => m.hdniFrame)
                @Html.HiddenFor(m => m.lgId)
            </div>
            <div class="row form-group">
                <div class="col-md-3">
                    <div class="form-group">
                        <label class="control-label">
                            Name
                            <span class="f_req">*</span>
                        </label>
                        @Html.TextBoxFor(m => m.strName, new { @class = "span11 required alphanumwithspc form-control", @maxlength = "20", @tabindex = "1", @next = "lgOrderCategoryId" })
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="row select-addnew">
                        <label class="control-label col-md-12">
                            Order Category
                            <span class="f_req">*</span>
                        </label>
                        <div class="col-md-10">
                            @Html.DropDownListFor(m => m.lgOrderCategoryId, Model.lstOrderCategory, new { @class = "span11 required chosen form-control", @tabindex = "2", @next = "btnSubmit" })
                        </div>
                        <div class="col-md-2">
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="row select-addnew">
                        <label class="control-label col-md-12">
                            Users
                            <span class="f_req">*</span>
                        </label>
                        <div class="col-md-10">
                            @Html.DropDownListFor(m => m.strUserId, Model.lstUsers, new { @class = "span11 required form-control", @multiple = "multiple", @tabindex = "9", @next = "btnSubmit" })
                            <input type="hidden" id="hdnstrUserIds" name="hdnstrUserIds" value="@Model.hdnstrUserIds" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="row form-group">
                <div class="col-md-12">
                    <input class="btn btn-inverse btn-primary" id="btnSubmit" name="inputSubmit" type="submit" value="Save" tabindex="3" title="Save Order" />
                    <input class="btn btn-green cancel" id="btnCancel" name="inputCancel" type="button" value="Cancel" tabindex="4" title="Cancel Order" />
                </div>
            </div>

        </div>
    </div>
}
<script src="~/Scripts/Utility/Order.js?v=@DateTime.Now.Ticks"></script>
