@{
    ViewBag.Title = "Fleet Colors";
    Layout = "~/Views/Shared/_Layout.cshtml";
    bool isAdd = Convert.ToBoolean(ViewData["blAddRights"]);
    bool isEdit = Convert.ToBoolean(ViewData["blEditRights"]);
    bool isDelete = Convert.ToBoolean(ViewData["blDeleteRights"]);
    bool isExport = Convert.ToBoolean(ViewData["blExportRights"]);
 }
@using (Html.BeginForm("FleetColors", "FleetColors", FormMethod.Post, new { @id = "frmFleetColors", @class = "form_validation_ttip well stdform" }))
{

    <div class="panel panel-grey">
        <div class="panel-heading">
            @ViewBag.Title
        </div>
        @Html.Hidden("hfAdd", @isAdd)
        @Html.Hidden("hfEdit", @isEdit)
        @Html.Hidden("hfDelete", @isDelete)
        @Html.Hidden("hfExport", @isExport)

        <div class="panel-body pan">
            <div class="row form-group">
                <div class="col-md-3">
                    <div class="row search-label">
                        <label class="control-label col-md-3">
                            Search
                        </label>
                        <div class="col-md-9">
                            <input type="text" id="txtFleetColorsSearch" class="form-control" tabindex="1" />
                        </div>
                    </div>
                </div>
                <div class="col-md-9 text-right">
                    <label class="control-label">
                        &nbsp;
                    </label>
                    @if (isAdd)
                    {
 @Html.ActionLink("Add New Fleet Colors", "FleetColors", "FleetColors", null, new { @class = "btn btn-primary" })
                    }
                    @if (isDelete)
                    {

                        <input class="btn btn-danger" id="btnDeleteFleetColors" name="inputDelete" type="button" value="Delete Fleet Colors" tabindex="3" title='Delete Fleet Colors' />
                    }
               
                </div>
            </div>

            <div class="span12 user-contant">
                <div id="dvFleetColors">
                    <table id="tblFleetColors"></table>
                    <div id="dvFleetColorsFooter"></div>
                </div>
            </div>
        </div>
    </div>
}
<script src="~/Scripts/Utility/FleetColorsView.js"></script>
