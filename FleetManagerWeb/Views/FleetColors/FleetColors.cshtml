@model FleetManagerWeb.Models.ClsFleetColors
@{
    ViewBag.Title = "Fleet Colors";
    Layout = "~/Views/Shared/_Layout.cshtml";
 }
@using (Html.BeginForm("FleetColors", "FleetColors", FormMethod.Post, new { @id = "frmFleetColors", @class = "form_validation_ttip well stdform" }))
{

    <div class="panel panel-grey">
        <div class="panel-heading">
            @ViewBag.Title
        </div>

        <div class="panel-body pan">
            <div class="row-fluid">
                @Html.HiddenFor(m => m.hdniFrame)
                @Html.HiddenFor(m => m.lgId)
            </div>
            <div class="row form-group">
                <div class="col-md-3">
                    <div class="form-group">
                        <label class="control-label">
                            Fleet Colors Name <span class="f_req">*</span>
                        </label>
                        @Html.TextBoxFor(m => m.strFleetColorsName, new { @class = "span11 required alphanumwithspc form-control", @maxlength = "10", @tabindex = "2", @next = "btnSubmit" })
                    </div>

                </div>
            </div>
            <div class="row form-group">
                <div class="col-md-12">
                    <input class="btn btn-inverse btn-primary" id="btnSubmit" name="inputSubmit" type="submit" value="Save" tabindex="3" title='Save Fleet Colors' />
                    <input class="btn btn-green cancel" id="btnCancel" name="inputCancel" type="button" value="Cancel" tabindex="4" title='Cancel Fleet Colors' />
                </div>
            </div>
        </div>
    </div>
}
<script src="~/Scripts/Utility/FleetColors.js"></script>
