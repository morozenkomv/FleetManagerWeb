@{
    ViewBag.Title = "Cost Types";
    Layout = "~/Views/Shared/_Layout.cshtml";
    bool isAdd = Convert.ToBoolean(ViewData["blAddRights"]);
    bool isEdit = Convert.ToBoolean(ViewData["blEditRights"]);
    bool isDelete = Convert.ToBoolean(ViewData["blDeleteRights"]);
    bool isExport = Convert.ToBoolean(ViewData["blExportRights"]);
}
@using (Html.BeginForm("CostType", "CostType", FormMethod.Post, new { @id = "frmCostType", @class = "form_validation_ttip well stdform" }))
{

    <div class="panel panel-grey">
        <div class="panel-heading">
            @ViewBag.Title
        </div>
        @Html.Hidden("hfAdd", @isAdd)
        @Html.Hidden("hfEdit", @isEdit)
        @Html.Hidden("hfDelete", @isDelete)
        @Html.Hidden("hfExport", @isExport)

        <div class="panel-body pan">
            <div class="row form-group">
                <div class="col-md-3">
                    <div class="row search-label">
                        <label class="control-label col-md-3">
                            Search
                        </label>
                        <div class="col-md-9">
                            <input type="text" id="txtCostTypeSearch" class="form-control" tabindex="1" />
                        </div>
                    </div>
                </div>
                <div class="col-md-9 text-right">
                    <label class="control-label">
                        &nbsp;
                    </label>
                    @if (isAdd)
                    {
                        @Html.ActionLink("Add New Cost Type", "CostType", "CostType", null, new { @class = "btn btn-primary" })
                    }
                    @if (isDelete)
                    {

                        <input class="btn btn-danger" id="btnDeleteCostType" name="inputDelete" type="button" value="Delete Cost Type" tabindex="3" title='Delete Cost Type' />
                    }

                </div>
            </div>

            <div class="span12 user-contant">
                <div id="dvTripReason">
                    <table id="tblDeleteCostType"></table>
                    <div id="dvTripReasonFooter"></div>
                </div>
            </div>
        </div>
    </div>
}
<script src="~/Scripts/Utility/CostTypeView.js"></script>