@model FleetManagerWeb.Models.ClsCostType
@{
    ViewBag.Title = "Cost type";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("CostType", "CostType", FormMethod.Post, new { @id = "frmCostType", @class = "form_validation_ttip well stdform" }))
{

    <div class="panel panel-grey">
        <div class="panel-heading">
            @ViewBag.Title
        </div>

        <div class="panel-body pan">
            <div class="row-fluid">
                @Html.HiddenFor(m => m.HdniFrame)
                @Html.HiddenFor(m => m.Id)
            </div>
            <div class="row form-group">
                <div class="col-md-3">
                    <div class="form-group">
                        <label class="control-label">
                            Cost Type Name <span class="f_req">*</span>
                        </label>
                        @Html.TextBoxFor(m => m.TypeName, new { @class = "span11 required alphanumwithspc form-control", @maxlength = "50", @tabindex = "2", @next = "btnSubmit" })
                    </div>

                </div>
            </div>
            <div class="row form-group">
                <div class="col-md-12">
                    <input class="btn btn-inverse btn-primary" id="btnSubmit" name="inputSubmit" type="submit" value="Save" tabindex="3" title='Save Trip Reason' />
                    <input class="btn btn-green cancel" id="btnCancel" name="inputCancel" type="button" value="Cancel" tabindex="4" title='Cancel Trip Reason' />
                </div>
            </div>
        </div>
    </div>
}
<script src="~/Scripts/Utility/CostType.js"></script>
