@{
    ViewBag.Title = "Compose";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("User", "Mail", FormMethod.Post, new { @id = "frmUser", @class = "form_validation_ttip well stdform" }))
{
    <div class="panel panel-grey">
        <div class="panel-heading">
            @ViewBag.Title
        </div>
        <div class="panel-body pan">
            <div class="row form-group">
                <div class="col-md-3">
                    <div class="row search-label">
                        <label class="control-label col-md-3">
                            Search
                        </label>
                        <div class="col-md-9">
                            <input type="text" id="txtUserSearch" class="form-control" tabindex="1" />
                        </div>
                    </div>
                </div>
            </div>
         
            <div class="span12 user-contant">
                <div id="dvUser">
                    <table id="tblUser"></table>
                    <div id="dvUserFooter"></div>
                </div>
            </div>
            <div class="row form-group">
                <div class="col-md-12">
                    <div class="row search-label">
                        <label class="control-label col-md-1">
                            Message
                        </label>
                        <div class="col-md-11">
                            <input type="text" id="txtMessage" class="form-control" tabindex="2" style="width:100%; height: 80px;" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="row form-group">
                <div class="col-md-12">
                    <div class="row search-label">
                        <div class="col-md-12 text-right">
                            <input class="btn btn-primary" id="btnSend" name="btnSend" type="button" value="Send" tabindex="3" title='Send' />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<script type="text/javascript">
    var AdminRoleID = '@FleetManagerWeb.Common.Enum.USER_ADMIN_ROLES.ADMIN.GetHashCode()';
</script>
<script src="~/Scripts/Utility/Compose.js?v=@DateTime.Now.Ticks"></script>
